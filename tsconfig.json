{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@commands/*": [
        "./commands/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@rp/*": [
        "./register-programs/*"
      ],
      "@types/*": [
        "./types/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": [
    "./tsconfig.jsonc"
  ]
}